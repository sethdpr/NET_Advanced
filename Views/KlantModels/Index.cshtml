@model IEnumerable<NET_Advanced.Models.KlantModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Klanten</h1>

<p>
    <a asp-action="Create">Maak een nieuwe klant aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Bewerk</a> |
                <a asp-controller="BestellingModels" asp-action="Index" asp-route-id="@item.Id">Bestellingen</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>