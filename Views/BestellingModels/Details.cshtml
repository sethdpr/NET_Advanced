@model NET_Advanced.Models.BestellingModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NET_Advanced.Resources.Resource> Localizer;

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Order"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>

        <dt class="col-sm-2">
            @Localizer["Customer"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klant.Naam)
        </dd>
    </dl>

    <h5>@Localizer["Products"]</h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Quantity"]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.BestellingProducten != null && Model.BestellingProducten.Any())
            {
                foreach (var bp in Model.BestellingProducten)
                {
                    <tr>
                        <td>@bp.Product.Naam</td>
                        <td>@bp.Aantal</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">@Localizer["NoProductsInOrder"]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index" asp-route-id="@Model?.KlantId">@Localizer["BackToList"]</a>
</div>