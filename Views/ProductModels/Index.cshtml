@model IEnumerable<NET_Advanced.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Producten</h1>

@if (User.IsInRole("Admin")) 
{
    <p>
        <a asp-action="Create">Maak nieuw product aan</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Bewerk</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
