@model List<NET_AdvancedUser>
@using NET_Advanced.Areas.Identity.Data;

@{
    ViewData["Title"] = "Gebruikerslijst";
}

<h1>Gebruikerslijst</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Gebruikersnaam</th>
                <th>Email</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", "Admin", new { id = user.Id })">Bewerken</a> |
                        <a href="@Url.Action("Delete", "Admin", new { id = user.Id })">Verwijderen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Geen gebruikers gevonden.</p>
}

<p>
    <a href="@Url.Action("Create", "Admin")">Nieuwe gebruiker toevoegen</a>
</p>